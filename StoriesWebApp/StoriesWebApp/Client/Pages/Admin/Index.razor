@page "/admin/stories/"
@page "/admin/stories/index"

<h2>Listado de Historias</h2>
<StoriesTable Caption="Lista de historias desde Pagina ADMIN" Stories="stories" OnStorySelect="OnStorySelected">
	<HeaderTemplate>
		<thead>
			<tr>
				<th>TituloAdmin</th>
				<th>Autor</th>
				<th>Fecha de Publicación</th>
				<th>Categoría</th>
			</tr>
		</thead>
    </HeaderTemplate>

    <RowTemplate Context="data" >
		<tr>
			<td><a href="#" @onclick="(()=> data.Table.SelectStory(data.Story))" @onclick:preventDefault="true">@data.Story.Title</a></td>
			<td>@data.Story.Author</td>
			<td>@data.Story.Category</td>
			<td><a href="#">Editar</a></td>
			<td><a href="#">Eliminar</a></td>			
		</tr>
    </RowTemplate>

</StoriesTable>

@if (storySelected != null)
{
	<StoryDetails Story="storySelected" />
}
